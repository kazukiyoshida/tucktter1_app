    <%= render partial: "tweets/header" %>
    <div class="middle-content">
      <%= render partial: "tweets/sidebar" %>
      <div class="main">
        <div class="post-function">
         <% if user_signed_in? %>
           <% if current_user.user_icon.presence %>
            <div>
             <%= link_to image_tag(current_user.user_icon, class: 'icon' )  , root_path  %>
            </div>
          <% else %>  
           <div>    
             <%= link_to image_tag("/images/icon.png", class: 'account-icon' )  , root_path  %>
           </div>
          <% end %> 
          <%= form_with(model: @research, local: true) do |form| %>
           <div class="field">
             <%= form.label :research_title ,"研究タイトル (必須：50文字以内)" %><br />
             <%= form.text_field :research_title %>
           </div>
           <div class="field">
             <%= form.label :research_summary ,"研究概要 (必須：500文字以内)" %><br />
             <%= form.text_area :research_summary, class:"text_area" %>
           </div>
            <div class="field">
             <%= form.label :research_url ,"研究URL" %><br />
             <%= form.text_field :research_url,placeholder: "自分の研究結果をまとめたページのURLを入力しよう！" %>
           </div>
            <%= form.submit "投稿する", class: "research-send" %>
          <%end%>
         <% end %>
        </div>        
      </div>
    </div>
    <%= render partial: "tweets/footer" %>