    <%= render partial: "tweets/header" %>
    <div class="middle-content">
      <%= render partial: "tweets/sidebar" %>
      <div class="main">
        <div class="contents-row">
          <%= render partial: "researches/postindex", locals: { research: @research } %>
          <div class="comment-index">
            <% if user_signed_in? %>
             <h2>トータルいいね数： <%= @likes.count %> </h2>
             <% if current_user.already_liked?(@research) %>
                <%= button_to 'いいね取消', research_research_like_path(@research.id,current_user.id), method: :delete,class: "comment-submit" %>
             <% else %>
              <%= form_with(model: [@research, @like], local: true) do |form| %>
                <%= form.submit "いいねする", class: "comment-submit" %>
              <% end %>
              <% end %>
            <% end %>
            <% unless user_signed_in? %>
              <strong><p>※※※　いいねするには新規登録/ログインが必要です　※※※</p></strong>
            <% end %>
            <div class="comments">
              <h4>いいねしたユーザの一覧</h4>
              <% @likes.each do |like| %>
                <p>
                  <strong><%= link_to like.user.Nickname, "/users/#{like.user_id}" %></strong>
                </p>
              <% end %>
            </div>
          </div>
        </div>
      </div>

    </div>

    <%= render partial: "tweets/footer" %>