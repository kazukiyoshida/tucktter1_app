   <%= render partial: "tweets/header" %>
    <div class="middle-content">
      <%= render partial: "tweets/sidebar" %>
      <div class="main">
        <div class="contents-row">
          <%= render partial: "researches/postindex", locals: { research: @research } %>
          <div class="comment-index">
            <div class="result">
              <%= flash[:result] %>
            </div>
            <div class="result_del">
              <%= flash[:result_del] %>
            </div>
             <% unless user_signed_in? %>
             <strong><p>※※※　いいねするには新規登録/ログインが必要です　※※※</p></strong>
             <% end %>
               <%= link_to "戻る", researches_path, class:  "research-send-back" %> 
            <div class="comments">
             <h2>【トータルいいね数】<%= @likes.count %> </h2>
              <h4>いいねしたユーザの一覧</h4>
              <% @likes.each do |like| %>
                <p>
                  <strong><%= link_to like.user.Nickname, "/users/#{like.user_id}" %></strong>
                </p>
              <% end %>
            </div>
          </div>
        </div>
      </div>

    </div>

    <%= render partial: "tweets/footer" %>